{
	"compilerOptions": {
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"target": "esnext",
		"module": "commonjs",
		"lib": [
			"dom",
			"es2018"
		],
		"typeRoots": [
			"./node_modules/@types"
		],
		"strict": true,
		"declaration": true,
		"outDir": "dist",
		"esModuleInterop": true
	},
	"include": ["source/**/*"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}